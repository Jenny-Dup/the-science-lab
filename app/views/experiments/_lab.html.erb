<div data-controller="lab">
  <div data-lab-target="elementList">
    <h3>Available Elements</h3>
    <div class="element-list d-flex flex-wrap">
      <% @elements.each do |element| %>
        <div class="element-block draggable-element m-2" draggable="true" data-element-id="<%= element.id %>" data-element-name="<%= element.name %>" data-action="dragstart->lab#dragStart">
          <%= element.name %> (<%= element.symbol %>)
        </div>
      <% end %>
    </div>
  </div>

  <div class="dropzone-area mb-4" data-lab-target="dropzoneArea" data-action="dragover->lab#allowDrop drop->lab#dropElement">
    <p>Drop elements here to increment the counter</p>
  </div>

  <button class="btn btn-success mb-4" data-lab-target="combineButton" data-action="click->lab#combine" style="visibility: hidden;">Combine</button>
  <button class="btn btn-warning mb-4 ml-2" data-lab-target="clearButton" data-action="click->lab#clear" style="visibility: hidden;">Clear All</button>

  <div data-lab-target="result"></div>
</div>
