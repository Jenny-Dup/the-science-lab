<div class="main-content mb-3" style="min-height: 100vh; background: url('<%= asset_path("custom/background2.jpg") %>') no-repeat center center fixed; background-size: cover; padding-top: 60px; position: relative; z-index: 1;">
  <div class="container text-center pt-2">
  <h1 class="my-4">Available Courses</h1>
  <p> View all the amazing courses that Science Lab has to offer. </p>
    <div class="row">
      <% @courses.each do |course| %>
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= link_to course.title, course_path(course) %></h5>
              <p class="card-text"><%= course.description %></p>
              <% unless current_user.enrolled_in?(course) %>
                <%= button_to 'Enroll', enrollments_path(course_id: course.id), method: :post, class: 'btn-profile' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
