<div class="main-content pb-3" style="min-height: 100vh; background: url('<%= asset_path("custom/background2.jpg") %>') no-repeat center center fixed; background-size: cover; padding-top: 60px; position: relative; z-index: 1;">
  <div class="container pt-2 pb-4">
    <h1 class="my-4">Edit User</h1>

    <p>Total XP Points: <%= current_user.total_xp %></p>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <div class="avatar-selection">
          <%= f.collection_radio_buttons :avatar, avatar_options, :second, :first do |b| %>
            <div class="avatar-option">
              <%= b.radio_button %>
              <%= b.label { image_tag(asset_path(b.value), class: "img-fluid rounded-circle selectable-avatar") } %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name, class: 'control-label' %>
        <%= f.input_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :surname, class: 'control-label' %>
        <%= f.input_field :surname, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <%= f.input_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :bio, "About Me", class: 'control-label' %>
        <%= f.input_field :bio, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password (leave it blank if you don't want to change it)", class: 'control-label' %>
        <%= f.input_field :password, class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label' %>
        <%= f.input_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "Current password (we need your current password to confirm your changes)", class: 'control-label' %>
        <%= f.input_field :current_password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Update", class: 'btn-profile' %>
      </div>
    <% end %>

    <%= link_to "Back", :back, class: 'btn-profile' %>
  </div>
</div>
